{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2017": true,
        "node": true
    },
    "files": [
        "src/js*/*.js"
    ],
    "extends": [
        "eslint:recommended",
        "htmlacademy/vanilla"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ]
    }
}